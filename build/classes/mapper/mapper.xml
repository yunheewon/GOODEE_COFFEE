	<!-- login : 로그인-->
	<!-- 로그인 테스트 -->
	 <select id="adminLoginCheck" resultType="String">
	 	select a_name
	 	from admin
	 	where a_id = '${userId}' and a_pwd = '${userPwd}'
    </select>
    
    <select id="staffLoginCheck" resultType="String">
	 	select w_name
	 	from worker
	 	where w_no = '${userId}' and w_pwd = '${userPwd}'
    </select>
